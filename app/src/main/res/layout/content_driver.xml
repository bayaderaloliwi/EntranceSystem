<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bayaderaloliwi.entrancesystem.User"
    tools:showIn="@layout/activity_user"
    android:clickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Driverimage"
        android:layout_marginTop="37dp"
        android:background="@drawable/profilepic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="25dp"
        android:layout_alignTop="@+id/Userimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID No:"
        android:id="@+id/textView2"
        android:textSize="20dp"

        android:textColor="#f8c258"
        android:layout_below="@+id/Driverimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"

        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#f8c258"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/textView4"
        android:textSize="20dp"

        android:textColor="#f8c258"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textView5"
        android:textSize="20dp"

        android:textColor="#f8c258"
        android:layout_below="@+id/textView4"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverName"
        android:text="***"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toLeftOf="@+id/Username"
        android:layout_toStartOf="@+id/Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriverIDno"
        android:text="***"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toLeftOf="@+id/Username"
        android:layout_toStartOf="@+id/Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Dmail"
        android:text="***"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/Username"
        android:layout_toStartOf="@+id/Username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DriAddress"
        android:text="***"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/Userimage"
        android:layout_toEndOf="@+id/Userimage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Belowdname"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="***" />




</RelativeLayout>
